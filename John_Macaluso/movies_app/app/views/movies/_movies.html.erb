<table>
   <thead>
      <th>Title</th>
      <th>Description</th>
      <th>Year Released</th>
      <th>Rating</th>
      <th></th>
      <th></th>
   </thead>
   <tbody>
      <% @movies.each do |movie| %>
      <tr>
         <td><%= movie.title %></td>
         <td><%= movie.description %></td>
         <td><%= movie.year_released %></td>
         <td><%= movie.rating %></td>
         <td><%= link_to "Show", movie %></td>
         <td><%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
   </tbody>
</table>
