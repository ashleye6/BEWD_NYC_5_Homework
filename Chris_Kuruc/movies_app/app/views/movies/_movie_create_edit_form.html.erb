<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :year_released %>
  <%= f.text_field :year_released %>
  <%= f.label :rating %>
  <%= f.radio_button(:rating, 1) %>
  <%= f.label(:star_one, "1") %>
  <%= f.radio_button(:rating, 2) %>
  <%= f.label(:star_one, "2") %>
  <%= f.radio_button(:rating, 3) %>
  <%= f.label(:star_one, "3") %>
  <%= f.radio_button(:rating, 4) %>
  <%= f.label(:star_one, "4") %>
  <%= f.radio_button(:rating, 5) %>
  <%= f.label(:star_one, "5") %>
  <%= f.submit %>
<% end %>